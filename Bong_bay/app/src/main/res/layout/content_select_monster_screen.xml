<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_select_monster_screen"
    tools:context=".ScreenControl.SelectMonsterScreen">


    <ViewFlipper
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/viewFlipper">

        //monster 1
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:id="@+id/iamgeView01"
                android:src="@drawable/select_frog"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnStart1"
                android:background="@drawable/btn_start"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        //monster 2
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/select_wood"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnStart2"
                android:background="@drawable/btn_start"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        //monster 3
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/select_pink"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnStart3"
                android:background="@drawable/btn_start"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        //monster 4
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/select_star"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnStart4"
                android:background="@drawable/btn_start"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        //monster 5
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/select_robo"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnStart5"
                android:background="@drawable/btn_start"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </ViewFlipper>

</RelativeLayout>
