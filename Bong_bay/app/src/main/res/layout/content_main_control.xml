<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main_control"
    tools:context=".Control.MainControl"
    >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Play Game"
                android:id="@+id/playGame"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="106dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce"
                android:id="@+id/introduce"
                android:layout_marginTop="86dp"
                android:layout_below="@+id/playGame"
                android:layout_alignLeft="@+id/playGame"
                android:layout_alignStart="@+id/playGame" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height Score"
                android:id="@+id/heightScore"
                android:layout_marginTop="130dp"
                android:layout_below="@+id/introduce"
                android:layout_alignLeft="@+id/introduce"
                android:layout_alignStart="@+id/introduce" />

</RelativeLayout>
