<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo01.pdkpro.bong_bay">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ScreenControl.MainControl"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScreenControl.SelectMonsterScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScreenControl.GamePlayScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScreenControl.MapScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScreenControl.IntroduceScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScreenControl.HighScoreScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScreenControl.ResultScreen"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
